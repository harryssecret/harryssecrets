---
import { socialSites } from "src/infos";
---

<footer>
  <p>tous droits réservés, 2023</p>
  <section class="social">
    {
      socialSites.map(({ username, site, url }) => (
        <a href={username}>{site}</a>
      ))
    }
  </section>
</footer>

<style>
  footer {
    width: 100%;
    border-top: solid 3px #000;
    margin-top: 1rem;
    padding: 2rem 0;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
  }

  section.social {
    display: flex;
    gap: 4px;
  }
</style>
