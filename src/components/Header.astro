---
import { siteName } from "src/infos";
import HamburgerMenu from "./HamburgerMenu.astro";
import Navigation from "./Navigation.astro";
import ProfilePicture from "./ProfilePicture.astro";
---

<nav>
  <div class="bar">
    <div>
      <a href="/" aria-label="Retour Ã  l'accueil">
        <ProfilePicture />
        <p>{siteName}</p>
      </a>
    </div>
    <HamburgerMenu />
  </div>
  <Navigation />
</nav>

<style>
  nav {
    width: 100%;
    padding: 2em 0;
    display: flex;
    flex-flow: column;
    font-family: "Source Code Pro", monospace;
    color: var(--secondary-color);
  }

  .bar {
    width: 100%;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    align-items: center;
  }

  nav div a {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  nav > div > p {
    margin-left: 1rem;
  }

  nav a {
    text-decoration: none;
  }
</style>
